<settings>
  <servers>
    <server>
      <id>gitlab-maven</id>
      <configuration>
        <httpHeaders>
          <property>
            <name>Job-Token</name>
            <value>${env.CI_JOB_TOKEN}</value>
          </property>
        </httpHeaders>
      </configuration>
    </server>
    <server>
      <id>github</id>
      <!--   CONFIGURED @ GITHUB ORGANIZATION SECRETS   -->
      <username>${env.SETTINGS_XML_USERNAME}</username>
      <password>${env.SETTINGS_XML_PASSWORD}</password>
    </server>
  </servers>
</settings>
